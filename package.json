{
    "name": "fluxquery-backend",
    "version": "2.0.4",
    "private": true,
    "scripts": {
        "release": "semantic-release"
    },
    "devDependencies": {
        "semantic-release": "^24.2.1",
        "@semantic-release/commit-analyzer": "^13.0.0",
        "@semantic-release/release-notes-generator": "^14.0.1",
        "@semantic-release/github": "^11.0.1",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1"
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "bin/*.exe",
                            "label": "FluxQuery Agent (Windows)"
                        },
                        {
                            "path": "bin/*linux-amd64",
                            "label": "FluxQuery Agent (Linux)"
                        },
                        {
                            "path": "bin/*darwin-arm64",
                            "label": "FluxQuery Agent (macOS Apple Silicon)"
                        },
                        {
                            "path": "bin/*darwin-amd64",
                            "label": "FluxQuery Agent (macOS Intel)"
                        }
                    ]
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    }
}